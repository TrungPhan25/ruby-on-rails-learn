<div class="card mb-3" id="<%= dom_id post %>">
    <div class="card-body">
        <h5 class="card-title">
            <%= post.title %>
        </h5>
        <h4>
            <small class="text-body-secondary">
            posted by: <%= link_to post.user.name, user_path(post.user) %>
            </small>
        </h4>
        <p class="card-text">
            <small class="text-body-secondary">
                <%= pluralize(post.views, "view") %>
            </small>
        </p>
        <p class="card-text">
            <%= post.body %>
        </p>
    </div>
</div>
